{
  "compilerOptions": {
    "target": "es6",     
    "module": "commonjs",
    "outDir": "dist"  ,
    "rootDir": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/global.d.ts" ],
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts", "src/server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}